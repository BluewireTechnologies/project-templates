<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="service" type="Bluewire.Webhooks.Service.Configuration.ServiceConfigurationSection, Bluewire.Webhooks.Service" />
  </configSections>
  <appSettings>
    <add key="Bluewire.Webhooks.Service:LogDirectory" value="logs/" />
  </appSettings>
  <service>
    <database path="data/sqlite.db" />
    <hosting>
      <add baseUri="http://localhost:50109" />
    </hosting>
  </service>
  <log4net>
    <root>
      <level value="DEBUG" />
      <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file type="log4net.Util.PatternString" value="%property{LogDirectory}log.txt" />
        <appendToFile value="false" />
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="7" />
        <maximumFileSize value="10MB" />
        <staticLogFileName value="true" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
        </layout>
      </appender>
    </root>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6" />
  </startup>
</configuration>